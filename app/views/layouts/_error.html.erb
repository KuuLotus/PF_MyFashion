<% if model.errors.any? %>
  <% model.errors.full_messages.each_with_index do |message, index| %>
    <% if model.errors.count == 1 %>
      <div class="alert alert-warning alert-dismissible fade show text-center m-0">
        <p><%= message %></p>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% else %>
      <% if index + 1 != model.errors.count %>
        <div class="alert alert-warning alert-dismissible fade show text-center">
          <p><%= message %></p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% else %>
        <div class="alert alert-warning alert-dismissible fade show text-center mb-0">
          <p><%= message %></p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% end %>
    <% end %>
  <% end %>
<% end %>