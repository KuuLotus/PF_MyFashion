<% if flash[:notice] %>
  <div id="notice" class="alert alert-success alert-dismissible fade show m-0 text-center" data-bs-dismiss="alert">
    <p><%= notice %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>
<% if flash[:alert] %>
  <div id="alert" class="alert alert-danger alert-dismissible fade show m-0 text-center" data-bs-dismiss="alert">
    <p><%= alert %></p>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<script>
  // フラッシュメッセージ
  $(function(){
    $('#notice').fadeOut(4000);  //４秒かけて消えていく
    $('#alert').fadeOut(4000);  //４秒かけて消えていく
    $('.alert-warning').fadeOut(4000);  //４秒かけて消えていく
  });
</script>
