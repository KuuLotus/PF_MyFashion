<!--タイトル-->
<%= render "admin/members/title_show", member: @member, text: "のフォロワー一覧" %>

<div class="container mt-3">
  <!--ユーザーの投稿数、いいね数、フォロー、フォロワー数-->
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= render "admin/members/coordinate_follow", member: @member, member_followings: @member_followings, member_followers: @member_followers %>
    </div>
  </div>

  <!--ユーザーのフォロワー一覧-->
  <div class="row">
    <% if @member.present? %>
      <%= render "follow", members: @members %>
      <%= paginate @members%>
    <% else %>
      <div class="pt-5 text-center">
        <h4>まだフォローしていません</h4>
      </div>
    <% end %>
  </div>
</div>

