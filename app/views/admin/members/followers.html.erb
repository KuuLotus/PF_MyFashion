<header id="title_top">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 member_info">
        <p><%= @member.name %>のフォロワー一覧</p>
        <div class="member_profile mt-3">
          <div class="d-flex">
            <div>
              <%= image_tag @member.get_profile_image, class: "profile_image_show" %>
            </div>
            <div class="title_text ps-4 pt-1">
              <h1><%= @member.name %></h1>
              <div class="d-flex">
                <p class="pe-2"><%= @member.get_gender %></p>
                <p class="pe-2"><%= @member.get_height %></p>
              </div>
              <p class="pt-3"><%= @member.body %></p>
            </div>
          </div>
        </div>
        <div class="withdraw_btn">
          <% if @member.is_deleted != true %>
            <%= link_to "退会させる", withdraw_admin_member_path(@member), method: :patch, data: {confirm: "本当に退会させますか？"}, class: "btn btn-danger mb-3" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</header>

<!--ユーザーの投稿数、フォロー、フォロワー数-->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="coordinate_follow d-flex text-center">
        <div class="coordinate_follow_box col-4">
          <%= link_to admin_member_path(@member) do %>
            <%= @member.posts.count %>
            <span>コーディネート</span>
          <% end %>
        </div>
        <div class="coordinate_follow_box col-4">
          <%= link_to followings_admin_member_path(@member) do %>
            <%= @member.followings.count %>
            <span>フォロー</span>
          <% end %>
        </div>
        <div class="coordinate_follow_box col-4">
          <%= link_to followers_admin_member_path(@member) do %>
            <%= @member.followers.count %>
            <span>フォロワー</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<% if @members.present? %>
  <%= render "follow", members: @members %>
<% else %>
　<div class="pt-5 text-center">
    <h4>まだフォローされていません</h4>
  </div>
<% end %>

