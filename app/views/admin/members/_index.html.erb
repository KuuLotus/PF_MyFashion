<% members.each do |member| %>
  <li id="member_list" class="d-flex justify-content-between align-items-center">
    <div class="member_info d-flex">
      <div class="profile_image_index">
        <%= link_to admin_member_path(member) do %>
          <%= image_tag member.get_profile_image, class: "profile_image_index" %>
        <% end %>
      </div>
      <div class="member_text ps-3">
        <h3 class="name">
          <%= link_to admin_member_path(member) do %>
            <%= member.name %>
          <% end %>
        </h3>
        <p class="info">
          <span><%= member.get_gender %></span>
          <span><%= member.get_height %></span>
        <p>
        <p>
          <span>
            <%= link_to admin_member_path(member), class: "meta" do %>
              <span><%= member.posts.count %></span>コーディネート
            <% end %>
          </span>
          <span>
            <%= link_to followers_member_path(member), class: "meta" do %>
              <span><%= member.followers.count %></span>フォロワー
            <% end %>
          </span>
        </p>
      </div>
    </div>
    <div class="which_withdraw">
      <% if member.is_deleted == true %>
        <p class="badge bg-danger me-3 fw-bold fs-6">退会済み</p>
      <% else%>
        <p class="badge bg-success me-3 fw-bold fs-6">入会中</p>
      <% end %>
    </div>
  </li>
<% end %>
