<header id="title_top">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 d-flex justify-content-between">
        <h1>タグ一覧</h1>
        <div class="all_member">
          <h2 class="ps-3"><%= @tags.count %><span>件</span></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<!--タグ一覧メイン-->
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 d-flex justify-content-between">
      <div class="container">
        <div class="row">
          <!--サイドバー-->
          <div class="col-lg-3 gender-nav">
            <nav>
              <h2 class="title">一覧</h2>
              <ul class="m-0">
                <li class="py-2"><%= link_to "コーディネート", admin_posts_path %></li>
                <li class="py-2"><%= link_to "ユーザー", admin_root_path %></li>
                <li class="py-2"><%= link_to "タグ", admin_tags_path %></li>
              </ul>
              <h2 class="title">性別</h2>
              <ul class="m-0">
                <li class="py-2"><%= link_to "ALL", admin_root_path %></li>
                <li class="py-2"><%= link_to "MEN", men_admin_members_path %></li>
                <li class="py-2"><%= link_to "WOMEN", women_admin_members_path %></li>
              </ul>
            </nav>
          </div>

          <!--メイン-->
          <div class="col-lg-9">
            <!--タグ追加-->
            <div id="tag-main-container">
              <%= render "tag", tag: @tag, tags: @tags %>
              <div class="px-2">
                <%= paginate @tags %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
