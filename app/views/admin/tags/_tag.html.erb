<p class="title">タグ追加</p>
<%= form_with model: tag, url: admin_tags_path, method: :post, local: false do |f| %>
  <div class="d-flex tag-form p-3">
    <div class="form-group">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= button_tag(type: "submit", class: "btn btn-secondary ms-2") do %>
        <i class="fa-solid fa-plus"></i>
      <% end %>
    </div>
  </div>
<% end %>
<!--タグ一覧-->
<p class="title">タグ一覧</p>
<div class="tag_area p-3 gap-2">
  <% tags.each do |tag| %>
    <div class="tag_box">
      <%= link_to admin_tag_path(tag), method: :delete, data: {confirm: "本当に削除しますか？"}, remote: true do %>
        # <%= tag.name %>
        <i class="fa-solid fa-delete-left text-danger"></i>
      <% end %>
    </div>
  <% end %>
</div>