<li class="list-group-item" id="post_comments_area_<%= post.id %>">
  <%= render "public/post_comments/comment_area", post: post %>
</li>
<% if member_signed_in? %>
  <%= form_with model: post_comment_new, url: post_post_comments_path(post), method: :post, local: false do |f| %>
    <li class="list-group-item">
      <div class="form-box d-flex gap-2">
        <div class="col-1">
          <%= image_tag current_member.get_profile_image, class: "profile_image_li" %>
        </div>
        <div class="col-9">
          <%= f.text_area :comment, rows: '1', placeholder: "コメントを書く", class: "form-control d-grid comment-form" %>
        </div>
        <div class="col-1">
          <%= f.submit "送信", class: "btn btn-outline-secondary" %>
        </div>
      </div>
    </li>
  <% end %>
<% end %>
