<div class="container text-center">
  <div class="row">
    <div id="login-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      　<%= render "public/shared/error_messages", resource: resource %>

　　　　<div class="row">
          <div class="col-8 offset-2">
            <h1>新期会員登録</h1>
            <div class="form-group mb-3">
              <%= f.text_field :name, placeholder: "ニックネーム", class: "form-control" %>
            </div>
            <div class="form-group mb-3">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-group mb-3">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class: "form-control" %>
            </div>
            <div class="form-group mb-3">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control" %>
            </div>
            <div class="actions">
              <%= f.submit "登録する", class: "btn btn-secondary" %>
            </div>
            <p class="mt-2">アカウントをお持ちの方</p>
            <%= link_to "ログインする", new_member_session_path, class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
