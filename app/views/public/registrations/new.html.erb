<!--エラーメッセージ-->
<%= render "layouts/error", model: resource %>

<div class="container text-center">
  <div class="row">
    <div id="login-box">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
　　　　<div class="row">
          <div class="col-8 offset-2">
            <h1>新期会員登録</h1>
            <div class="form-group mb-3 d-grid">
              <%= f.text_field :name, placeholder: "ニックネーム", class: "form-control" %>
            </div>
            <div class="form-group mb-3 d-grid">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-group mb-3 d-grid">
              <%= f.password_field :password, autocomplete: "new-password", placeholder: "パスワード(6文字以上)", class: "form-control" %>
            </div>
            <div class="form-group mb-3 d-grid">
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "パスワード(確認用)", class: "form-control" %>
            </div>
            <div class="actions">
              <%= button_tag(type: "submit", class: "secondary-btn bg-gray") do %>
                <span>登録する</span>
              <% end %>
            </div>
            <div class="row mt-2">
              <div class="col-md-6">
                <p class="my-2">アカウントをお持ちの方</p>
                <%= link_to new_member_session_path, class: "primary-btn bg-blue" do %>
                  <span>ログインする</span>
                <% end %>
              </div>
              <div class="col-md-6">
                <p class="my-2">採用企業担当者様はこちら</p>
                <%= link_to members_guest_sign_in_path, class: "primary-btn bg-blue", method: :post do %>
                  <span>ログインする</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
