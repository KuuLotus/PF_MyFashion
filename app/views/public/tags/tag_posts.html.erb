<header id="title_top">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 d-flex justify-content-between">
        <h1><%= @tag.name %>の投稿一覧</h1>
        <div class="all_member">
          <h2 class="ps-3"><%= @tag_posts.count %><span>件</span></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<!--コーデ一覧メイン-->
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 d-flex justify-content-between">
      <div class="container">
        <div class="row">
          <!--サイドバー-->
          <div class="col-md-3 gender-nav">
            <%= render "public/posts/sidebar", tags: @tags %>
          </div>
          <!--コーディネート一覧-->
          <div class="col-md-9">
            <div class="row">
              <% if @tag_posts.present? %>
                <%= render "public/posts/index", posts: @tag_posts %>
              <% else %>
                <h4 class="text-center mt-5"><%= @tag.name %>の投稿はまだありません</h4>
              <% end %>
            </div>
            <%= paginate @tag_posts %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>