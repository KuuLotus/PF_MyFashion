<!--タイトル-->
<%= render "public/members/title-top", member: @member, text: "のフォロー一覧" %>

<!--ユーザーの投稿数、いいね数、フォロー、フォロワー数-->
<div class="container mt-3">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <%= render "public/members/coordinate_follow", member: @member, member_followings: @member_followings, member_followers: @member_followers %>
    </div>
  </div>
</div>

<!--ユーザーのフォロー一覧-->
<% if @member_followings.present? %>
  <div class="container">
    <div class="row">
      <%= render "follow", members: @member_followings %>
      <%= paginate @member_followings %>
    </div>
  </div>
<% else %>
  <h4 class="text-center pt-5">まだフォローしていません</h4>
<% end %>
