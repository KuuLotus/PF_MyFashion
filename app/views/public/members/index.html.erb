<header id="title_top">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 d-flex justify-content-between">
        <h1>ユーザー一覧</h1>
        <div class="all_member">
          <h2 class="ps-3"><%= @members.count %><span>件</span></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<!--ユーザー一覧メイン-->
<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2 d-flex justify-content-between">
      <div class="container">
        <div class="row">
          <!--性別選択-->
          <div class="col-lg-3 gender-nav">
            <nav></nav>
          </div>

          <!--ユーザー一覧-->
          <div class="col-lg-9">
            <ul class="ps-0">
              <%= render "index", members: @members %>
            </ul>
            <%= paginate @members %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
