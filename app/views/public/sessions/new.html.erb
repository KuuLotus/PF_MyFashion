<div class="container text-center">
  <div class="row">
    <div id="login-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-8 offset-2">
            <h1>ログイン</h1>
            <div class="form-group mb-3 d-grid">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-field d-grid">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="actions">
              <%= button_tag(type: "submit", class: "secondary-btn bg-gray") do %>
                <span>ログイン</span>
              <% end %>
            </div>
            <div class="row mt-2">
              <div class="col-md-6">
                <p class="my-2">アカウントをお持ちでない方</p>
                <%= link_to new_member_registration_path, class: "primary-btn bg-blue" do %>
                  <span>新規会員登録</span>
                <% end %>
              </div>
              <div class="col-md-6">
                <p class="my-2">採用企業担当者様はこちら</p>
                <%= link_to members_guest_sign_in_path, class: "primary-btn bg-blue", method: :post do %>
                  <span>ログインする</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


