<div class="container text-center">
  <div class="row">
    <div id="login-box">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="row">
          <div class="col-8 offset-2">
            <h1>ログイン</h1>
            <div class="form-group mb-3 d-grid">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control" %>
            </div>
            <div class="form-field d-grid">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control" %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="field mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
            <div class="actions">
              <%= f.submit "ログイン", class: "btn btn-secondary" %>
            </div>
            <p class="my-2">アカウントをお持ちでない方</p>
            <%= link_to "新規会員登録をする", new_member_registration_path, class: "btn btn-primary" %>
            <p class="my-2">採用企業担当者様はこちら</p>
            <%= link_to 'ゲストログイン', members_guest_sign_in_path, class: "btn btn-primary", method: :post %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


