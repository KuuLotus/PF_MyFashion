<header id="title_top">
  <div class="container">
    <div class="row">
      <div class="col-md-10 offset-md-1 d-flex justify-content-between">
        <h1>タグ検索一覧</h1>
        <div class="all_member">
          <h2 class="ps-3"><%= @search_posts.count %><span>件</span></h2>
        </div>
      </div>
    </div>
  </div>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 d-flex justify-content-between">
      <div class="container">
        <div class="row">
          <!--性別選択-->
          <div class="col-md-3 gender-nav">
            <nav>
              <section class="gender pb-3">
                <h2 class="title">性別</h2>
                <ul class="m-0">
                  <li class="py-2"><%= link_to "ALL", posts_path %></li>
                  <li class="py-2"><%= link_to "MEN", men_posts_path %></li>
                  <li class="py-2"><%= link_to "WOMEN", women_posts_path %></li>
                </ul>
              </section>
              <section class="sidebar-tag pt-3">
                <h2 class="title">タグ</h2>
                <ul>
                  <li class="py-2 d-flex flex-wrap">
                    <% @tags.each do |tag| %>
                      <div class="tag_box mb-2 me-2">
                        <%= link_to tag_path(tag) do %>
                          # <%= tag.name %>
                        <% end %>
                      </div>
                    <% end %>
                  </li>
                </ul>
              </section>
            </nav>
          </div>
          <% if @search_posts.present? %>
            <!--コーディネート一覧-->
            <div class="col-md-9">
              <div class="row">
                <%= render "index", posts: @search_posts %>
              </div>
              <%= paginate @search_posts %>
            </div>
          <% else %>
            <div class="col-md-9">
              <h3 class="pt-5 text-center">条件に一致するコーディネートは見つかりませんでした</h3>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>


